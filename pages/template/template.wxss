/*主容器*/
.stepper {
	width: 188rpx;
	height: 54rpx;
	/*给主容器设一个边框*/
	border: 1rpx solid #D9D9D9;
	border-radius: 6rpx;
  overflow: hidden
}

/*加号和减号*/
.stepper text {
	width: 54rpx;
	height: 54rpx;
	text-align: center;
	float: left;
	font-size: 32rpx;
	font-weight: 700;
}

/*数值*/
.stepper input {
	width: 80rpx;
	height: 54rpx;
	float: left;
	margin: 0 auto;
	padding: 0;
	text-align: center;
	color: #000000;
	/*给中间的input设置左右边框即可*/
	border-left: 1rpx solid #D9D9D9;
	border-right: 1rpx solid #D9D9D9;
  background: #fff
}

/*普通样式*/
.stepper .normal {
	color: black;
}

/*禁用样式*/
.stepper .disabled {
	color: #ccc;
}
