			<!-- 进货商品列表 -->
			<view class="cart-item bg-white">
				<view class="goods-cart-info flex align-center">
					<image src="../../images/k2.jpg" mode="widthFix"></image>
					<view class="flex1">
						<view class="font-bold text-black">GMT | 牛仔褲 清爽夏天潮流搭配</view>
						<view>款号：GMT000001</view>
						<view class="flex flex-align-center">
							<view>单价：<text class="text-price price">50.00/件</text></view>
							<view class="flex1"></view>
						</view>
