			<view class="preferential-item">
				<view class="text-title">配送</view>
				<view>快递运输</view>
			</view>
			<view class="preferential-item justify-start">
				<view class="text-title">留言</view>
				<input type="text" placeholder="如果你有其他的需求,请留言"/>
